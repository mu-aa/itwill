<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>JoinForm</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
<style type="text/css">
h3 {
	text-align: left;
	margin-bottom: 5px;
}
.wrapper {
	width: 460px;
	margin: 0 auto;
}
.container {
	text-align: center;
}
.box {
	width: 100%;
}

.wrap {
	width: 100%;
	height: 50px;
}
.int {
	height: 100%;
	width: 100%;
	margin: 0 auto;
	font-size: 18px;
}
.bir_wrap {
	width: 140px;
	height: 50px;
}
#joinBtn {
	margin-top : 40px;
	padding : 20px;
	width: 100%;
	font-size: 20px;
	background-color: #6ED746;
	border: none;
	color: white;
}
.error {
	color: red;
	font-size: 15px;
	text-align: left;
}
#gender, #area {
	width: 468px;
	height: 56px;
	font-size: 18px;
}
</style>
</head>
<body>
	<div class=wrapper>
		<div class="container">
			<h1>회원가입</h1>
			
			<!-- 아이디 시작 -->
			<div class="box">
				<h3>아이디</h3>
				<div class="wrap">
					<input type="text" id="id" class="int">
					<span id="idMsg" class="error"></span>
				</div>
			</div>
			<!-- 아이디 끝 -->
			
			<!-- 비밀번호 시작 -->
			<div class="box">
				<h3>비밀번호</h3>
				<div class="wrap">
					<input type="password" id="passwd" class="int" placeholder="8~16자 영문문자, 숫자, 특수문자를 사용하세요.">
					<span id="passwdMsg" class="error"></span>
				</div>
			</div>
			<!-- 비밀번호 끝 -->
			
			<!-- 비밀번호 재확인 시작 -->
			<div class="box">
				<h3>비밀번호 재확인</h3>
				<div class="wrap">
					<input type="password" id="repasswd" class="int" placeholder="8~16자 영문문자, 숫자, 특수문자를 사용하세요.">
					<span id="repasswdMsg" class="error"></span>
					<span id="repasswdMatchMsg" class="error"></span>	
				</div>
			</div>
			<!-- 비밀번호 재확인 끝 -->
			
			<!-- 이름 시작 -->
			<div class="box">
				<h3>이름</h3>
				<div class="wrap">
					<input type="text" id="name" class="int" placeholder="이름을 입력해 주세요.">
					<span id="nameMsg" class="error"></span>	
				</div>
			</div>
			<!-- 이름 끝 -->
			
			
			<!-- 휴대전화 시작 -->
			<div class="box">
				<h3>휴대전화</h3>
				<div class="wrap">
					<input type="text" id="phone" class="int" maxlength="11" placeholder="ex)01012345678">
					<span id="phoneMsg" class="error"></span>
				</div>
			</div>
			<!-- 휴대전화 끝 -->
			
			<!-- 이메일 시작 -->
			<div class="box">
				<h3>이메일</h3>
				<div class="wrap">
					<input type="text" id="email" class="int" placeholder="ex)abc123@naver.com">
					<span id="emailMsg" class="error"></span>	
				</div>
			</div>
			<!-- 이메일 끝 -->
			
			<!-- 성별 시작 -->
			<div class="box">
				<h3>성별</h3>
				<div class="wrap">
					<select id="gender">
						<option value="">선택해주세요</option>
						<option value="0">남자</option>
						<option value="1">여자</option>	
					</select>
					<span id="genderMsg" class="error"></span>
				</div>
			</div>
			<!-- 성별 끝 -->
			
			<!-- 지역 시작 -->
			<div class="box">
				<h3>지역</h3>
				<div class="wrap">
					<select id="area">
						<option value="">선택해주세요</option>
						<option id="man" value="0">서울</option>
						<option id="woman" value="1">경기도</option>
						<option id="woman" value="2">강원도</option>
						<option id="woman" value="3">충청도</option>
						<option id="woman" value="4">경상도</option>
						<option id="woman" value="5">전라도</option>
						<option id="woman" value="6">제주도</option>
					</select>
					<span id="areaMsg" class="error"></span>
				</div>
			</div>
			<!-- 지역 끝 -->

			
			<button type="button" id="joinBtn">가입하기</button>
			
			
		</div>
	</div>
	
	
	
	<script type="text/javascript">
	$("#joinBtn").click(function() {
		$(".error").text("");
		
		var result=true;
		
		
		//비밀번호 유효성 검사
		var passwdReg=/^(?=.*[a-zA-Z])(?=.*[0-9])(?=.*[~!@#$%^&*_-]).{8,16}$/g;
		if(!passwdReg.test($("#passwd").val())) {
			$("#passwdMsg").text("형식에 맞게 입력해주세요.");
			result=false;
		}
		
		//비밀번호 재확인 유효성 검사
		if($("#repasswd").val()=="") {
			$("#repasswdMsg").text("형식에 맞게 입력해주세요.");
			result=false;
		} else if($("#passwd").val()!=$("#repasswd").val()) {
			$("#repasswdMatchMsg").text("비밀번호가 맞지 않습니다.");
			result=false;
		}
		
		//이름 유효성 검사
		if($("#name").val()=="") {
			$("#nameMsg").text("형식에 맞게 입력해주세요.");
			result=false;
		}
		
		//휴대전화 유효성 검사
		var phoneReg=/^[0-9]/g;
		if(!phoneReg.test($("#phone").val())) {
			$("#phoneMsg").text("형식에 맞게 입력해주세요.");
			result=false;
		}
		
		//이메일 유효성 검사
		//var emailReg=**********************************************************
		if($("#email").val()=="") {
			$("#emailMsg").text("형식에 맞게 입력해주세요.");
			result=false;
		}
		
		//성별 유효성 검사
		if($("#gender").val()=="") {
			$("#genderMsg").text("성별을 선택해주세요.");
			result=false;
		}
		
		//지역 유효성 검사
		if($("#area").val()=="") {
			$("#areaMsg").text("지역을 선택해주세요.");
			result=false;
		}
	});
	</script>
</body>
</html>