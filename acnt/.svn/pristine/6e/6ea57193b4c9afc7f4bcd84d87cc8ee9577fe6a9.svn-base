	<script src="resources/components2/datatables.net-select/js/dataTables.select.min.js"></script>
	
	<!-- theme scripts -->
	<script src="resources/js/scripts.js"></script>
	<script src="resources/components2/PACE/pace.min.js"></script>
</body>
</html>