@charset "UTF-8";

.month input{font-size: 20px; border: 1px solid gray;}

.btn { -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    background-color: white;
    border:none;
    border-style: none;
}

h3, span {
	font-size: 13px;
	font-weight: 700;
}
li {
    list-style: none;
}
nav {
	background-color: #f2f2f2; 
	width: 200px; 
	height: 100%;
	position: fixed; 
	top: 0;
	left: 0;
	overflow-x: hidden;
	padding-top: 20px;
    padding-left: 15px;
    line-height: 17px;
}

nav a {
	display: block;
	color: #000;
	padding: 5px;
	text-decoration: none;
    font-size: 13px;
    font-weight: 900;
          
}
nav a:hover {
	background-color: #ddd;
}
.ListMenu {
    background-color: rgba(255, 255, 255, 0.3);
}
ul {
    padding-inline-start: 0;
    background-color: rgba(255, 255, 255, 0.3);
    margin-right: 15px;
}
 ul li:first-child {
    border-bottom: 1px solid #41444e;
}
