<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>JoinForm</title>
<style type="text/css">
h3 {
	text-align: left;
	margin-bottom: 5px;
}
.wrapper {
	width: 460px;
	margin: 0 auto;
}
.container {
	text-align: center;
}
.box {
	width: 100%;
}

.wrap {
	width: 100%;
	height: 50px;
}
.int {
	height: 100%;
	width: 100%;
	margin: 0 auto;
	font-size: 18px;
}
.bir_wrap {
	width: 140px;
	height: 50px;
}
#bir_int {
	height: 100%;
	width: 100%;
	margin: 0 auto;
	font-size: 18px;
}
#join {
	margin-top : 20px;
	padding : 20px;
	width: 100%;
	font-size: 20px;
	background-color: #6ED746;
	border: none;
	color: white;
}
</style>
</head>
<body>
	<div class=wrapper>
		<div class="container">
			<h1>회원가입</h1>
			
			<!-- 아이디 시작 -->
			<div class="box">
				<h3>아이디</h3>
				<div class="wrap">
					<input type="text" id="id" class="int">	
				</div>
			</div>
			<!-- 아이디 끝 -->
			
			<!-- 비밀번호 시작 -->
			<div class="box">
				<h3>비밀번호</h3>
				<div class="wrap">
					<input type="password" id="passwd" class="int">	
				</div>
			</div>
			<!-- 비밀번호 끝 -->
			
			<!-- 비밀번호 재확인 시작 -->
			<div class="box">
				<h3>비밀번호 재확인</h3>
				<div class="wrap">
					<input type="password" id="repasswd" class="int">	
				</div>
			</div>
			<!-- 비밀번호 재확인 끝 -->
			
			<!-- 이름 시작 -->
			<div class="box">
				<h3>이름</h3>
				<div class="wrap">
					<input type="text" id="name" class="int">	
				</div>
			</div>
			<!-- 이름 끝 -->
			
			<!-- 생년월일 시작 -->
			<div class="box">
				<h3>생년월일</h3>
				<div class="bir_wrap" style="display: inline-block; float: left;">
					<input type="text" id="bir_int" maxlength="4" placeholder="년(4자)">
				</div>
				<div class="bir_wrap" style="display: inline-block; margin-left: 10px;">
					<input type="text" id="bir_int" maxlength="2" placeholder="월(4자)">
				</div>
				<div class="bir_wrap" style="display: inline-block; margin-left: 10px; float: right;">
					<input type="text" id="bir_int" maxlength="2" placeholder="일(4자)">
				</div>
			</div>
			<!-- 생년월일 끝 -->
			
			<!-- 휴대전화 시작 -->
			<div class="box">
				<h3>휴대전화</h3>
				<div class="wrap">
					<input type="text" id="phone" class="int" maxlength="11" placeholder="' - '은 생략">	
				</div>
			</div>
			<!-- 휴대전화 끝 -->
			
			<!-- 성별 시작 -->
			<div class="box" style="width: 210px; display: inline-block; float: left;">
				<h3>성별</h3>
				<div class="wrap" style="width: 150px;">
					<div style="width: 100%; height: 100%;">
						<input type="radio" name=gender value="남자"><font size="3px">남자&nbsp;&nbsp;</font>
						<input type="radio" name=gender value="여자"><font size="3px">여자</font>
					</div>
				</div>
			</div>
			<!-- 성별 끝 -->
			
			<!-- 지역 시작 -->
			<div class="box" style="width: 210px; display: inline-block; float: right;">
				<h3>지역</h3>
				<div class="wrap" style="width: 150px;">
					<select>
						<option>--선택해주세요--</option>
						<option value="1">서울</option>
						<option value="2">경기도</option>
						<option value="3">강원도</option>
						<option value="4">충청도</option>
						<option value="5">경상도</option>
						<option value="6">전라도</option>
						<option value="7">부산</option>
					</select>
				</div>
			</div>
			<!-- 지역 끝 -->
			<div>
				<input id="join" type="button" value="가입하기">
			</div>
		</div>
	</div>
</body>
</html>